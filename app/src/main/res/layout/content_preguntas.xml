<?xml version="1.0" encoding="utf-8"?>

<!-- Aqui se declara el contenido de activity_preguntas -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cuestionario"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Pantallas.PreguntasActivity"
    tools:showIn="@layout/activity_preguntas"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borde">

        <TextView
            android:id="@+id/titulo_pregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="PREGUNTA 1"
            android:textAlignment="center"
            android:textSize="@dimen/titulo_preguntas" />

        <TextView
            android:id="@+id/text_pregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/pregunta_1"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/contenido_preguntas" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="10dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="0.99"
        android:background="@drawable/borde">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radio_group">

            <RadioButton
                android:id="@+id/respuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/respuesta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/respuesta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RadioButton" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="10dp">
    </RelativeLayout>

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="@string/boton_siguiente"
        android:textSize="@dimen/texto_boton_siguiente"
        android:id="@+id/boton_siguiente"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_boton"
        android:background="@color/fondo_boton"
        android:drawableLeft="@drawable/estado_siguiente"
        android:drawablePadding="8dp"/>

</LinearLayout>
