<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="10dp"
    android:elevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/materia_imagen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/materia_nombre"
            android:layout_toRightOf="@+id/materia_imagen"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            android:text="INTRODUCCION"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/materia_codigo"
            android:text="IAI115"
            android:layout_toRightOf="@+id/materia_imagen"
            android:layout_below="@+id/materia_nombre"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grupo_nombre"
            android:text="LABORATORIO"
            android:layout_toRightOf="@+id/materia_imagen"
            android:layout_below="@+id/materia_codigo"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>